//calculator
#include <stdio.h>
void main()
{
    printf("SIMPLE CALCULATOR\n");
    printf("enter any two values\n");
    int a,b;
    
    char c;
    
    scanf("%d %d",&a, &b );
    //printf("choose operator\n");
    printf("+,-,/,*,%\n");
    scanf("%c", &c);
    printf("please select operator  and wait\n");
    scanf("%c", &c);
    if ((c =='+') ||(c == '-') || (c== '/') || (c == '*') || (c == '%'))
    {
        switch(c)
        
        {
            case '+': printf("%d + %d = %d",a,b,a+b);
                    break;
            default :printf("invalid code!\n");
                    break;
            case '-':printf("%d - %d =%d",a,b,a-b);
                    break;
            case '/':printf("%d / %d = %d",a,b,a/b);
                    break;
            case '*':printf("%d * %d = %d",a,b,a*b);
                    break;
            case '%':printf("%d %%  %d =%d",a,b,a%b);
                    break;
        }
    }
    
    printf("\nThankyou!!!  VIsIT AGAIN");
}
